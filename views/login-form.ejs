	<body class="bodybackground">

        
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to Login</h1>
            <div class="account-wall">
                <img class="profile-img" src="images/loginimage.jpg"
                    alt="">
                <form class="form-signin" action="/users/login" method="post">
                <input type="text" class="form-control" name="email" placeholder="Email" required autofocus>
                <input type="password" class="form-control" name="password" placeholder="Password" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Sign in</button>
                <label class="checkbox pull-left">
                    <input type="checkbox" value="remember-me">
                    Remember me
                </label>
                <a href="/users/forgotPass" class="pull-right need-help">Forgot Pass?? </a><span class="clearfix"></span>
                </form>
            </div>
            <a href="/users/register" class="text-center new-account">Create an account </a>
        </div>
    </div>
</div>


</body>
